{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure Linux Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--preset", "linux-debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$gcc"],
            "details": "Configures the project using linux debug preset."
        },
        {
            "label": "Configure Linux Debug for Super Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--preset", "linux-debug-superbuild"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$gcc"],
            "details": "Configures the project to be prepared for a super build (third parties) using linux debug preset."
        },
        {
            "label": "Build Linux Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "",
                "--preset", "linux-debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$gcc"],
            "details": "Builds the project using linux debug preset."
        },        
        {
            "type": "shell",
            "label": "My Taks",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cmake",
            "label": "CMake: build",
            "command": "build",
            "targets": [
                "install"
            ],
            "preset": "${command:cmake.activeBuildPresetName}",
            "group": "build",
            "problemMatcher": [],
            "detail": "CMake template build task"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}